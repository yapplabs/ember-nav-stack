{{component mountedRouter.rootNode.componentName
  node=mountedRouter.rootNode
  route=mountedRouter.rootNode.route
}}
{{log 'yapp.hbs:' (json-stringify mountedRouter.state pretty=true)}}

<div id='yapp-application' class={{if birdsEyeDebugging 'birds-eye-debugging' ''}}>
  {{#each (nav-layer-indices) as |layerIndex|}}
    <NavStack
      @layer={{layerIndex}}
      @footer={{if (eq layerIndex 0) (component 'tab-bar' switchToTab=this.switchToTab)}}
      @back={{this.pop}}
      @birdsEyeDebugging={{birdsEyeDebugging}}
    />
  {{/each}}
</div>

{{outlet}}
