<div id='yapp-application' class={{if birdsEyeDebugging 'birds-eye-debugging' ''}}>
  {{#each this.navStacks.stacks.all as |layer layerIndex|}}
    <NavStack
        @layer={{layerIndex}}
        @footer={{if (eq layerIndex 0) (component 'tab-bar')}}
        @back={{route-action 'back'}}
        @birdsEyeDebugging={{birdsEyeDebugging}}
    />
  {{/each}}
</div>

